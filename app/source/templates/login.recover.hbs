{{> header}}

<form class="login-form" autocomplete="off">
    <div class="text-xs-center m-b-2">
        <a href="https://www.postleaf.org/" target="_blank">
            <img class="logo" src="{{url 'source/assets/img/logo-color.svg'}}">
        </a>
    </div>

    <div class="form-group">
        <label for="username">{{L 'username'}}</label>
        <input type="text" name="username" id="username" class="form-control" autofocus>
    </div>

    <div class="row">
        <div class="col-sm-6 push-sm-6">
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">
                    {{L 'continue'}}
                </button>
            </div>
        </div>
        <div class="col-sm-6 pull-sm-6">
            <div class="form-group">
                <a class="btn btn-secondary btn-block" href="{{admin_url 'login'}}">{{L 'cancel'}}</a>
            </div>
        </div>
    </div>

    <div class="form-message text-warning text-xs-center m-t-2" hidden></div>
</form>

{{> footer}}